<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="frmIndustri">
        <field  
            name        = "nama"
            type        = "text"
            label       = "COM_SIAK_INDUSTRI_NAMA_LABEL"
            description = "COM_SIAK_INDUSTRI_NAMA_DESC"
            required    = "true"
            class       = "input input-xlarge"
            autofocus   = "true"
        />

        <field  
            name        = "alamat"
            type        = "text"
            label       = "COM_SIAK_INDUSTRI_ALAMAT_LABEL"
            description = ""
            required    = "true"
            class       = "input input-xlarge"
        />

        <field  
            name        = "kabupaten"
            type        = "text"
            label       = "COM_SIAK_USER_FIELD_KABUPATEN_LABEL"
            description = ""
            required    = "true"
            class       = "input input-large"
        />

        <field  
            name        = "propinsi"
            type        = "text"
            label       = "COM_SIAK_USER_FIELD_PROPINSI_LABEL"
            description = ""
            required    = "true"
            class       = "input input-large"
        />

        <field  
            name        = "telepon"
            type        = "tel"
            label       = "COM_SIAK_USER_FIELD_TELEPON_LABEL"
            description = ""
            required    = "true"
            class       = "input input-medium"
        />

        <field  
            name        = "email"
            type        = "email"
            label       = "JGLOBAL_EMAIL"
            description = ""
            class       = "input input-medium"
        />

        <field  
            name        = "pic"
            type        = "text"
            label       = "COM_SIAK_INDUSTRI_PIC_LABEL"
            description = ""
            required    = "true"
            class       = "input input-xlarge"
        />

        <field  
            name        = "jabatan_pic"
            type        = "text"
            label       = "COM_SIAK_INDUSTRI_JABATAN_PIC_LABEL"
            description = ""
            required    = "true"
            class       = "input input-xlarge"
        />

        <field  
            name        = "telepon_pic"
            type        = "tel"
            label       = "COM_SIAK_USER_FIELD_TELEPON_LABEL"
            description = ""
            required    = "true"
            class       = "input input-medium"
        />

        <field  
            name        = "no_dokumen_kerjasama"
            type        = "text"
            label       = "COM_SIAK_INDUSTRI_FIELD_NO_DOCUMENT_LABEL"
            description = ""
            class       = "input input-xlarge"
        />

        <field  
            name        = "tanggal_kerjasama"
            type        = "calendar"
            label       = "COM_SIAK_FIELD_TANGGAL_MULAI_LABEL"
            description = ""
            class       = "input input-medium"
        />

        <field  
            name        = "tanggal_berakhir"
            type        = "calendar"
            label       = "COM_SIAK_FIELD_TANGGAL_BERAKHIR_LABEL"
            description = ""
            class       = "input input-medium"
        />

        <field
			name        = "state"
			type        = "list"
			label       = "JSTATUS"
			description = "JFIELD_PUBLISHED_DESC"
			class       = "chzn-color-state"
			filter      = "intval"
			size        = "1"
			default = "1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

        <field
            name = "dokumen_kerjasama"
            type = "hidden"
            default = ""
        />

        <fields name="industri">
            <field 
                name        = "file"
                type        = "file"
                label       = "COM_SIAK_INDUSTRI_PERJANJIAN_SOFTCOPY"
                description = ""
                accept      = "application/pdf"
            />
        </fields>
    </fieldset>
</form>