<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="frmBayarAdmin">
        <field  
            name        = "mahasiswa"
            type        = "text"
            label       = "COM_SIAK_MAHASISWA_FIELD_TITLE_LABEL"
            readonly    = "true"
            class       = "input input-large"
        />

        <field  
            name        = "NPM"
            type        = "text"
            label       = "COM_SIAK_FIELD_NPM_LABEL"
            readonly    = "true"
            class       = "input input-large"
        />

        <field  
            name        = "pembayaran"
            type        = "text"
            label       = "COM_SIAK_BAYARAN_PEMBAYARAN_LABEL"
            readonly    = "true"
            class       = "input input-large"
        />
        

        <field
            name        = "matakuliah"
            type        = "modal_matakuliah"
            label       = "COM_SIAK_MATKUL_FIELD_NAMA_MK_LABEL"
            description = ""
            class       = "input input-large"
            showon      = "pembayaran:PRAKTIKUM"
        />

        <field  
            name        = "ta"
            type        = "ta"
            label       = "COM_SIAK_FIELD_TAHUN_AJARAN_LABEL"
            required  = "true"
            class       = "input input-large"
        />

        <field  
            name        = "tanggal_bayar"
            type        = "text"
            label       = "COM_SIAK_BAYARAN_TANGGAL_SETOR_LABEL"
            readonly    = "true"
            class       = "input input-large"
        />

        <field  
            name        = "jumlah"
            type        = "text"
            label       = "COM_SIAK_BAYARAN_JUMLAH_SETOR_LABEL"
            class       = "input input-large"
            required    = "true"
        />

        <field  
            name        = "semester"
            type        = "semesters"
            label       = "COM_SIAK_SEMESTER_FIELD_TITLE_LABEL"
            class       = "input input-large"
            required    = "true"
        />
        

        <field 
            name        = "confirm"
            type        = "radio"
            label       = "COM_SIAK_BAYARAN_CONFIRM_LABEL"
            required    = "true"
            class       = "btn-group btn-group-yesno"
            default     = "1"
            description = ""
        >
            <option value="0">UnConfirm</option>
            <option value="1">Confirmed</option>
        </field>

        <field 
            name        = "confirm_note"
            type        = "text"
            label       = "COM_SIAK_BAYARAN_CONFIRM_NOTE_LABEL"
            class       = "input input-xxlarge"
            description = ""
        />
          
    </fieldset>
</form>